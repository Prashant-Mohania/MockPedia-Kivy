#:import get_color_from_hex kivy.utils.get_color_from_hex

<ChangeAvatarPage>:
    #on_enter:
    #    app.avatarGrid()
    FloatLayout:
        canvas:
            Color:
                rgba: get_color_from_hex('#ccffff')
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 1
            pos_hint: {'top': 1, 'left': 1}
            size_hint: 1, .1
            MDToolbar:
                title: 'Change Avatar'
                # left_action_items: [['menu', lambda x: app.navBar('open')]]
                elevation: 10
        GridLayout:
            rows: 1
            pos_hint: {'top': .88, 'left': 1}
            size_hint: 1, .2
            spacing: 1
            padding: 1
            

            Image:
                id: av_btn
                source: 'avatars/man.png'

            MDTextField:
                hint_text: "Name"
                mode: "rectangle"
     
        ScrollView:
            pos_hint: {'top': .65, 'left': 1}
            size_hint: 1, .55
            bar_pos_y: 'left'
            bar_width: 10
            GridLayout:
                cols: 3
                id: avatar_grid
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
                spacing: 20, 20
                padding: 20, 20
        
        MDFillRoundFlatButton:
            pos_hint: {'top': .08, 'center_x': .5}
            text: 'Select'
            on_release:
                app.changeScreen('up', 'dashboard')