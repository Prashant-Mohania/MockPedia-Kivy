
#:import get_color_from_hex kivy.utils.get_color_from_hex

<DashboardPage>:
    FloatLayout:
        canvas:
            Color:
                rgba: get_color_from_hex('#ccffff')
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 1
            pos_hint: {'top': 1, 'left': 1}
            size_hint: 1, .1
            MDToolbar:
                title: 'Dashboard'
                left_action_items: [['menu', lambda x: app.navBar('open')]]
                elevation: 10
        GridLayout:
            cols: 1
            pos_hint: {'top': .88, 'left': 1}
            size_hint: 1, .2
            spacing: 1
            padding: 1
            
            Image:
                id: av_btn
                source: 'avatars/man.png'
                
                
        GridLayout:
            cols: 1
            pos_hint: {'top': .65, 'left': 1}
            size_hint: 1, .35
            MDGridLayout:
                cols: 1
                spacing: 15
                MDLabel:
                    text: 'Name'
                    font_size: "20dp"
                    bold: True
                    halign: 'center'
                MDLabel:
                    id: userName
                    text: app.defaultName
                    font_size: "40dp"
